<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.GeekBrainsStopwatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DigitsStyle" parent="Theme.GeekBrainsStopwatch">
        <item name="android:layout_width">@dimen/digits_pair_width</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/custom_digits_border</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="DigitsSeparatorStyle" parent="Theme.GeekBrainsStopwatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/digits_separator</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DigitsTipsStyle" parent="Theme.GeekBrainsStopwatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DigitsSecondsCounterStyle" parent="Theme.GeekBrainsStopwatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/custom_digits_border</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DigitsSecondsTipStyle" parent="Theme.GeekBrainsStopwatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ActionButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:backgroundTint">@color/action_buttons_background_color</item>
    </style>

    <style name="CheckboxStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="buttonTint">@color/checkbox_checked_color</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
</resources>